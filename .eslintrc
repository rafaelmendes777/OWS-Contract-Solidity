{
    "env": {
        "browser": false,
        "es2021": true,
        "mocha": true,
        "node": true
    },
    "plugins": ["@typescript-eslint"],
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "node/no-unsupported-features/es-syntax": [
            "error",
            { "ignores": ["modules"] }
        ],
        "semi": ["error", "never"],
        "indent": ["error", 4]
//        "objectCurlySpacing": ["error", "always"]
    }
}
